<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/baseline_recycling_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/baseline_restore_from_trash_24"
        android:supportsRtl="true"
        android:theme="@style/Theme.EcoRecicla"
        tools:targetApi="31">
        <activity
            android:name=".CategoryDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name=".HomeActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name=".ResetPasswordActivity"
            android:label="Restablecer Contraseña"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".StatisticsActivity"
            android:label="Estadísticas"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".TipsActivity"
            android:label="Consejos"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".CategoryDetailsActivity.CategoriesActivity"
            android:label="Categorías"
            android:parentActivityName=".HomeActivity" />
    </application>

</manifest>